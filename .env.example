# LLM Model Configuration
SCRIPT_GENERATION_MODEL=openai/gpt-4o-mini
SCRIPT_REVIEW_MODEL=openai/gpt-4o-mini
TRANSLATION_MODEL=openai/gpt-4o-mini
PDF_ANALYZER_MODEL=openai/gpt-4o-mini
VISION_ANALYZER_MODEL=openai/gpt-4o-mini
IMAGE_GENERATION_MODEL=google/imagen-4.0-generate-001
TTS_MODEL=openai/gpt-4o-mini-tts
TTS_voice=openai/onyx

ENABLE_VISUAL_ANALYSIS=true

SLIDE_IMAGE_PROVIDER=LLM
AVATAR_SERVICE=heygen  # Options: heygen, dalle

ELEVENLABS_API_KEY=your-elevenlabs-key
HEYGEN_API_KEY=your-heygen-key


# --- LLM Providers --------------------------------------------------------
# Explicit provider/model bindings shown above
TTS_PROVIDER=openai/gpt-4o-mini-tts
TTS_voice=openai/onyx


# --- OpenAI / DALLÂ·E ------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_TTS_VOICE=onyx
OPENAI_TIMEOUT=60
OPENAI_RETRIES=3
OPENAI_BACKOFF=0.5


# --- Google Gemini / Imagen ------------------------------------------------
# google-genai SDK accepts GOOGLE_GEMINI_API_KEY / GEMINI_API_KEY / GOOGLE_API_KEY
GOOGLE_GEMINI_API_KEY=your-gemini-key
# GEMINI_API_KEY=your-gemini-key
# GOOGLE_API_KEY=your-gemini-key
GOOGLE_GEMINI_MODEL=gemini-1.5-flash
GOOGLE_GEMINI_VISION_MODEL=gemini-1.5-flash
GOOGLE_IMAGE_MODEL=imagen-4.0-generate-001
GOOGLE_GEMINI_TIMEOUT=60
GOOGLE_GEMINI_RETRIES=3
GOOGLE_GEMINI_BACKOFF=0.5
# GOOGLE_GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1beta


# --- Google OAuth ---------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
# Update when deploying the web app anywhere other than localhost
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback


# Watermark Configuration
WATERMARK_ENABLED=true
WATERMARK_TEXT="SlideSpeaker AI"
WATERMARK_OPACITY=0.8
WATERMARK_SIZE=28


# FFmpeg Configuration
FFMPEG_THREADS=4
FFMPEG_PRESET=fast


# Storage (set STORAGE_PROVIDER to local | s3 | oss)
STORAGE_PROVIDER=local
PROXY_CLOUD_MEDIA=false

# AWS S3 Configuration (required when STORAGE_PROVIDER=s3)
AWS_S3_BUCKET_NAME=slidespeaker-dev
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Aliyun OSS Configuration (required when STORAGE_PROVIDER=oss)
OSS_BUCKET_NAME=slidespeaker-oss
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=your-oss-access-key
OSS_ACCESS_KEY_SECRET=your-oss-secret-key
OSS_REGION=cn-hangzhou


# Redis / Database
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

DATABASE_URL=postgresql+asyncpg://slidespeaker:slidespeaker@localhost:5432/slidespeaker


# Authentication
NEXTAUTH_SECRET=replace-with-generated-secret


# CORS Configuration (comma-separated allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
