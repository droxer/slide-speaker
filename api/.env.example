# OpenAI API for script generation and TTS


# ElevenLabs API for alternative TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=

# HeyGen API for avatar video generation
HEYGEN_API_KEY=your_heygen_api_key_here

# Redis configuration for state management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging / Runtime
LOG_LEVEL=INFO
# LOG_FILE can be set to enable file logging; leave empty to disable
LOG_FILE=
LOG_DIR=logs
PORT=8000
MAX_WORKERS=2

# LLM Model Configuration
PDF_ANALYZER_PROVIDER=openai     # Options: openai
REVIEW_PROVIDER=openai           # Options: openai (Qwen removed)
SCRIPT_PROVIDER=openai           # Options: openai (Qwen removed)
TRANSLATION_PROVIDER=openai      # Options: openai
TTS_SERVICE=openai               # Options: openai, elevenlabs (Qwen removed)
VISION_PROVIDER=openai           # Options: openai
IMAGE_PROVIDER=openai            # Options: openai

SLIDE_IMAGE_PROVIDER=PIL
AVATAR_SERVICE=heygen  # Options: heygen, dalle

OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=                 # Optional: set for OpenAI-compatible services
OPENAI_TIMEOUT=60                # Seconds; default request timeout
OPENAI_RETRIES=3                 # Retry attempts for LLM calls
OPENAI_BACKOFF=0.5               # Initial backoff seconds (exponential)
LLM_PROVIDER=openai              # LLM provider (openai | google[future])
OPENAI_PDF_ANALYZER_MODEL=gpt-4o-mini
OPENAI_TRANSLATION_MODEL=gpt-4o-mini    # Used when TRANSLATION_PROVIDER=openai
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_IMAGE_MODEL=gpt-image-1
OPENAI_REVIEW_MODEL=gpt-4o
OPENAI_SCRIPT_MODEL=gpt-4o
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# Qwen support removed across the app

ENABLE_VISUAL_ANALYSIS=true
WATERMARK_ENABLED=true
WATERMARK_TEXT="SlideSpeaker AI"
WATERMARK_OPACITY=0.95
WATERMARK_SIZE=64

# FFmpeg Configuration
FFMPEG_FPS=24
FFMPEG_THREADS=2
FFMPEG_PRESET=medium
FFMPEG_BITRATE=2000k
FFMPEG_AUDIO_BITRATE=128k
FFMPEG_CODEC=libx264
FFMPEG_AUDIO_CODEC=aac

# Note: You need to sign up for these services and get API keys:
# - OpenAI: https://platform.openai.com
# - ElevenLabs: https://elevenlabs.io
# - HeyGen: https://www.heygen.com

# Storage Configuration
STORAGE_PROVIDER=local  # Options: local, s3, oss

# AWS S3 Configuration (required when STORAGE_PROVIDER=s3)
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
# Optional: For testing with MinIO or other S3-compatible services
AWS_S3_ENDPOINT_URL=

# Aliyun OSS Configuration (required when STORAGE_PROVIDER=oss)
OSS_BUCKET_NAME=your-bucket-name
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=your-access-key-id
OSS_ACCESS_KEY_SECRET=your-access-key-secret
OSS_REGION=cn-hangzhou
OSS_IS_CNAME=false  # Set true if using a custom CNAME domain for the bucket

# Media proxy (bypass cloud CORS by proxying through API)
PROXY_CLOUD_MEDIA=false

# Google OAuth Configuration (required for Google login)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

DATABASE_URL=
NEXTAUTH_SECRET=